/* =========================
   TOKENS (one source of truth)
   ========================= */
:root{
  /* Colors */
  --white:#FFFFFF;
  --mid:#F1EEFF;
  --blue:#4B6CB7;
  --gold:#FFD166;
  --green:#56FF8D;
  --magenta:#D94BCD;
  --ph:#D5EDF2;
  --text:#333333;

  /* Layout */
  --maxw:68rem;           /* â‰ˆ1088px */
  --radius-sm:.5rem;
  --radius-md:.75rem;
  --gap-1:.5rem;
  --gap-2:1rem;
  --gap-3:1.5rem;
  --gap-4:2rem;

  /* Breakpoints */
  --bp-md:768px;
  --bp-lg:1024px;
}

/* =========================
   BASE & UTILITIES
   ========================= */
*{box-sizing:border-box}
body{
  margin:0; color:var(--text); background:var(--white);
  font:16px/1.5 system-ui,-apple-system,"Segoe UI",Roboto,sans-serif;
}
.container{max-width:var(--maxw); margin:0 auto; padding:0 var(--gap-2)}
.section-title{color:var(--blue); font-size:1.5rem; margin:var(--gap-4) 0 var(--gap-2)}
.skip-link{position:absolute; left:-9999px}
.skip-link:focus{left:8px; top:8px; background:#000; color:#fff; padding:.5rem; z-index:1000}

/* =========================
   BUTTONS (BEM + legacy map)
   ========================= */
.btn{
  display:inline-block; padding:.75rem 1.25rem;
  border-radius:var(--radius-sm); text-decoration:none;
  font-weight:700; border:2px solid transparent;
  transition:background-color .2s ease, color .2s ease;
}
.btn--primary{ background:var(--blue); color:#fff }
.btn--primary:hover,.btn--primary:focus-visible{ background:var(--gold); color:#000; outline:none; }
.btn--cta{ background:var(--green); color:#000 }
.btn--cta:hover,.btn--cta:focus-visible{ background:var(--gold); color:#000; outline:none; }

/* Legacy alias to avoid HTML churn */
.btn-primary{ @supports not (selector(:-internal-any)){ } } /* no-op to keep validators happy */
.btn-primary{ background:var(--blue)!important; color:#fff!important }
.btn-primary:hover,.btn-primary:focus{ background:var(--gold)!important; color:#000!important; outline:2px solid transparent; outline-offset:2px }

/* =========================
   HERO (single source)
   ========================= */
.hero{
  position:relative; width:100%; min-height:70vh;
  display:grid; place-items:center; overflow:clip; /* full-bleed */
  background:transparent; /* visual comes from .hero__bg */
  isolation:isolate; /* keeps overlays self-contained */
}
.hero__bg{
  position:absolute; inset:0; z-index:0;
  background:var(--ph); /* placeholder band until image arrives */
}
.hero__bg img{
  width:100%; height:100%; object-fit:cover; object-position:center; display:block;
}
.hero__content{
  position:relative; z-index:1; text-align:center; color:var(--text);
  width:min(100%, calc(var(--maxw) - 2rem));
  margin-inline:1rem; padding-block:clamp(2rem, 6vh, 4rem);
}
.hero__content h1{
  color:var(--blue);
  font-size:clamp(1.8rem, 4.5vw, 3rem); line-height:1.1; margin:0 0 .6rem;
}
.hero__sub{ font-size:clamp(1rem, 2.4vw, 1.25rem); margin:0 0 1.25rem }

/* Optional legibility overlay for busy photos (inert on placeholder) */
.hero::before{
  content:""; position:absolute; inset:0; z-index:0; pointer-events:none;
  background:linear-gradient(to bottom, rgba(255,255,255,.15), rgba(255,255,255,0));
}

/* =========================
   TRUST
   ========================= */
.trust{ padding:var(--gap-4) var(--gap-2) }
.trust__grid{
  list-style:none; display:grid; grid-template-columns:1fr;
  gap:var(--gap-2); padding:0; margin:0;
}
@media (min-width:var(--bp-md)){
  .trust__grid{ grid-template-columns:repeat(3,1fr) }
}
.trust__item{ background:var(--mid); border-radius:var(--radius-md); padding:var(--gap-2) }
.trust__icon{
  width:64px; height:64px; background:var(--ph);
  border-radius:var(--radius-sm); margin-bottom:.5rem;
}

/* =========================
   FEATURED
   ========================= */
.featured{ padding:var(--gap-4) var(--gap-2) }
.cards{
  display:grid; grid-template-columns:1fr; gap:var(--gap-2);
}
@media (min-width:var(--bp-md)){
  .cards{ grid-template-columns:repeat(2,1fr) }
}
@media (min-width:var(--bp-lg)){
  .cards{ grid-template-columns:repeat(4,1fr) }
}
.card{
  background:#fff; border:1px solid #ddd; border-radius:var(--radius-md);
  padding:.75rem; transition:background .2s ease;
}
.card:hover,.card:focus-within{ background:var(--mid) }
.card__img{
  width:100%; aspect-ratio:3/2; background:var(--ph);
  border-radius:var(--radius-sm); margin-bottom:.5rem;
}
.card__title{ color:var(--blue); margin:.25rem 0 }

/* =========================
   COMMUNITY
   ========================= */
.community{ padding:var(--gap-4) var(--gap-2) }
.community__img{
  width:100%; aspect-ratio:16/9; background:var(--ph);
  border-radius:var(--radius-sm); margin-top:.75rem;
}

/* =========================
   FOOTER
   ========================= */
.footer{ background:var(--blue); color:#fff; padding:var(--gap-2) }
.footer__links{
  display:flex; gap:var(--gap-2); list-style:none; margin:0; padding:0;
}
.footer__links a{ color:#fff; text-decoration:none; padding:.125rem .25rem; border-radius:.25rem }
.footer__links a:hover,.footer__links a:focus{ color:#000; background:var(--gold) }

/* =========================
   REDUCED MOTION & FOCUS
   ========================= */
@media (prefers-reduced-motion: reduce){
  .btn{ transition:none }
}
